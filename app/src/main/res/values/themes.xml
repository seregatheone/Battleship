<resources>
    <!-- Base application theme. -->
    <style name="Theme.Battleship" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="battleShipViewStyle">@style/DefaultBattleShipViewStyle</item>
    </style>

    <style name="DefaultBattleShipViewStyle">
        <item name="freeCellColor">@color/project_white_yellow</item>
        <item name="missedCellColor">@color/project_gray</item>
        <item name="shotCellColor">@color/project_red</item>
        <item name="placedShipColor">@color/project_light_blue</item>
        <item name="columnsAmount">10</item>
        <item name="rowsAmount">10</item>
    </style>
</resources>